<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.bd.entity.ResourceClassifySmallEntity" table="resource_classify_small" schema="blog" lazy="false">
        <id name="id">
            <column name="id" sql-type="int(10)"/>
            <generator class="native"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(32)" length="32"/>
        </property>
        <many-to-one name="resourceClassifyBig" class="com.bd.entity.ResourceClassifyBigEntity">
            <column name="rcbId"/>
        </many-to-one>
        <set name="resources" inverse="true">
            <key>
                <column name="rcsId"/>
            </key>
            <one-to-many class="com.bd.entity.ResourceEntity"/>
        </set>
    </class>
</hibernate-mapping>